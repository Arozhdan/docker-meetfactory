.map{
  position: relative;
  padding-bottom: 66.75%;
  &__title{
    position: absolute;
    bottom: 23.22%;
    left: 0;
    display: block;
    width: 100%;
    text-align: center;
    transition: var(--transition-longer);
  }
  .vue-map-container{
    position: absolute;
    width: 100%;
    height: 100%;
  }
  .gm-style-pbc{
    display: none;
  }
}
@media (max-width: 640px) {
  .gm-style-iw.gm-style-iw-c{
    display: none;
  }
  .map__title {
    bottom: 3%;
  }
}
